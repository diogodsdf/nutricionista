<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Visualizar Usuario</h2>
            </div>
            <div class="p-2">
                <span class="d-none d-md-block">
                    <a href="/admin/usuario" class="btn btn-outline-info btn-sm">Listar</a>
                    <a href="/admin/edit-usuario/{{usuario._id}}" class="btn btn-outline-warning btn-sm">Editar</a>
                    <a href="/admin/del-usuario/{{usuario._id}}" class="btn btn-outline-danger btn-sm">Apagar</a>
                </span>
                <div class="dropdown d-block d-md-none">
                    <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Ações
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                        <a class="dropdown-item" href="/admin/usuario">Listar</a>
                        <a class="dropdown-item" href="/admin/edit-usuario/{{usuario._id}}">Editar</a>
                        <a class="dropdown-item" href="/admin/del-usuario/{{usuario._id}}" data-toggle="modal"
                            data-target="#apagarRegistro">Apagar</a>
                    </div>
                </div>
            </div>
        </div>
        <hr>
        {{>_msg}}
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">{{usuario._id}}</dd>

            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">{{usuario.nome}}</dd>

            <dt class="col-sm-3">Valor</dt>
            <dd class="col-sm-9">{{usuario.email}}</dd>

            <dt class="col-sm-3">Criado</dt>
            <dd class="col-sm-9">{{usuario.created}}</dd>

            <dt class="col-sm-3">Nivel de Acesso</dt>
            <dd class="col-sm-9">
                <a href="/admin/vis-cat-pagamento/{{usuario.nivacesso._id}}">
                    {{usuario.nivacesso.nome}}
                </a>
            </dd>
            
        </dl>
    </div>
</div>