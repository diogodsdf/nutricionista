<div class="content p-1">
  <div class="list-group-item">
    <div class="d-flex">
      <div class="mr-auto p-2">
        <h2 class="display-4 titulo">Visualizar Nivel de Acesso</h2>
      </div>
      <div class="p-2">
        <span class="d-none d-md-block">
          <a href="/admin/niv-acesso" class="btn btn-outline-info btn-sm">Listar</a>
          <a href="/admin/edit-niv-acesso/{{nivacesso._id}}" class="btn btn-outline-warning btn-sm">Editar</a>
          <a href="/admin/del-niv-acesso/{{nivacesso._id}}" class="btn btn-outline-danger btn-sm">Apagar</a>
        </span>
        <div class="dropdown d-block d-md-none">
          <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar" data-toggle="dropdown"
            aria-haspopup="true" aria-expanded="false">
            Ações
          </button>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
            <a class="dropdown-item" href="/admin/niv-acesso">Listar</a>
            <a class="dropdown-item" href="/admin/edit-niv-acesso/{{nivacesso._id}}">Editar</a>
            <a class="dropdown-item" href="/admin/del-niv-acesso/{{nivacesso._id}}" data-toggle="modal"
              data-target="#apagarRegistro">Apagar</a>
          </div>
        </div>
      </div>
    </div>
    <hr>
    {{>_msg}}
    <dl class="row">
      <dt class="col-sm-3">ID</dt>
      <dd class="col-sm-9">{{nivacesso._id}}</dd>

      <dt class="col-sm-3">Nome</dt>
      <dd class="col-sm-9">{{nivacesso.nome}}</dd>

      <dt class="col-sm-3">Ordem</dt>
      <dd class="col-sm-9">{{nivacesso.ordem}}</dd>

    </dl>
{{#if usuarios }}
    <div class="table-responsive">
      <table class="table table-striped table-hover table-bordered">
        <thead>
          <tr>
            <th>Nome</th>
            <th>E-mail</th>
            <th class="text-center">Ações</th>
          </tr>
        </thead>
        <tbody>
          {{#each usuarios}}
          <tr>
            <td>{{nome}}</td>
            <td>{{email}}</td>
            <td class="text-center">
              <span class="d-none d-md-block">
                <a href="/admin/vis-usuario/{{_id}}" class="btn btn-outline-primary btn-sm">Visualizar</a>
                <a href="/admin/edit-usuario/{{_id}}" class="btn btn-outline-warning btn-sm">Editar</a>
                <a href="/admin/del-usuario/{{_id}}" class="btn btn-outline-danger btn-sm">Apagar</a>
              </span>
              <div class="dropdown d-block d-md-none">
                <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                  data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Ações
                </button>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                  <a class="dropdown-item" href="/admin/vis-usuario/{{_id}}">Visualizar</a>
                  <a class="dropdown-item" href="/admin/edit-usuario/{{_id}}">Editar</a>
                  <a class="dropdown-item" href="/admin/del-usuario/{{_id}}">Apagar</a>
                </div>
              </div>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    {{/if}}
  </div>
</div>